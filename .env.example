# ===========================================
# .env.example - Çevre Değişkenleri Şablonu
# ===========================================
# Bu dosyayı Git'e commit edin
# Gerçek değerler için .env dosyası oluşturun

# Server Configuration
PORT=3000
NODE_ENV=development

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Security
CORS_ORIGIN=*
CORS_CREDENTIALS=false

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Rate Limiting (ileride eklenecek)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Database Configuration (ileride eklenecek)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=devops_project
# DB_USER=postgres
# DB_PASS=your_password
# DB_SSL=false

# Redis Configuration (ileride eklenecek)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password

# JWT Configuration (ileride eklenecek)
# JWT_SECRET=your-super-secret-jwt-key-min-32-characters
# JWT_EXPIRES_IN=7d
# JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration (ileride eklenecek)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your_email@gmail.com
# EMAIL_PASS=your_app_password

# Cloud Storage (ileride eklenecek)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=eu-west-1
# AWS_S3_BUCKET=your-bucket-name

# Monitoring & Analytics
# SENTRY_DSN=your_sentry_dsn_url
# NEW_RELIC_LICENSE_KEY=your_new_relic_license_key
# GOOGLE_ANALYTICS_ID=your_ga_tracking_id

# External APIs (ileride eklenecek)
# EXTERNAL_API_KEY=your_api_key
# EXTERNAL_API_URL=https://api.example.com

# Development Tools
# DEBUG=app:*
# SWAGGER_ENABLED=true